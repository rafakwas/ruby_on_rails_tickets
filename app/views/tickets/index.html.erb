<h1>Bilety</h1>

<table class = "table-striped">
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Siedzenie</th>
    <th>Adre</th>
    <th>Cena</th>
    <th>Email</th>
    <th>Telefon</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tickets.each do |ticket| %>
      <tr>
        <td><%= ticket.name %></td>
        <td><%= ticket.seat_id_seq %></td>
        <td><%= ticket.address %></td>
        <td><%= ticket.price %></td>
        <td><%= ticket.email_address %></td>
        <td><%= ticket.phone %></td>
        <td><%= link_to 'Pokaż', ticket, class: 'btn btn-info btn-xs' %></td>
        <% if ticket.user == current_user %>
            <td><%= link_to  edit_ticket_path(ticket), class: 'btn btn-info btn-xs' do %>
                  <i class="glyphicon glyphicon-pencil"></i> Edit
              <% end %>
            </td>
            <td><%= link_to  ticket, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Jesteś pewien?' }  do %>
                  <i class="glyphicon glyphicon-remove"></i> Destroy
              <% end %>
            </td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

<td><%= link_to 'Kup bilet', new_ticket_path, class: 'btn btn-success btn-xs' %></td>
